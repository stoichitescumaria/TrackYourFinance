
<AddNewForm>:
    BoxLayout:
        cols: 1
        GridLayout:
            TextInput:
                id: type
                pos: root.center_x - 220, 300
                size: 400,50
                hint_text: "Type"

            TextInput:
                id: price
                pos: root.center_x - 220, 200
                size: 400,50
                hint_text: "Price"

            TextInput:
                id: comment
                pos: root.center_x - 220, 100
                size: 400,50
                hint_text: "Comment"
            
            Button:
                size: 130,40
                pos: root.center_x - 100, 50
                text: 'Submit'
                on_release: root.submit_input(type.text,price.text,comment.text)
        

<HomeScreen>:
    GridLayout:
        cols: 1
        rows: 2
        ActionBar:
            top: 0
            ActionView:
                ActionPrevious:
                ActionButton:
                    text: 'Home'
                    on_press: root.manager.current = 'screen_home'

                ActionButton:
                    text: 'Add New'
                    on_press: root.manager.current = 'screen_add'
                ActionButton:
                    text: 'Saving'
                    on_press: root.manager.current = 'screen_add'
                ActionButton:
                    text: 'Sold'
                    on_press: root.manager.current = 'screen_add'
        BoxLayout:
            orientation: "vertical"
            MyRecycleView:

<MyRecycleView>:
    viewclass: 'Label'
    RecycleBoxLayout:
        color: 1,1,1,1
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
    

<AddScreen>:
    BoxLayout:


<LoginScreen>:
    padding: 100,100,100,100
    spacing: 100
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: "30sp"
            RelativeLayout:
                TextInput:
                    id: username
                    hint_text: "Username"
                    size_hint: 0.5, 0.7
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            RelativeLayout:
                TextInput:
                    id: password
                    hint_text: "Password"
                    size_hint: 0.5, 0.7
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.5, 1
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            Label:
                id: login_wrong
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 0, 0, 1
                opacity: 1 if self.state == 'normal' else 0.5
                # color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up for a space Journey!"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Login Page"
            on_press: root.go_to_login()


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    HomeScreen:
        name: 'screen_home'
    AddScreen:
        name: 'screen_add'