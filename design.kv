<Add>:
    BoxLayout:
        cols: 1
        GridLayout:
            TextInput:
                id: type
                pos: root.center_x - 220, 300
                size: 400,50
                hint_text: "Type"

            TextInput:
                id: price
                pos: root.center_x - 220, 200
                size: 400,50
                hint_text: "Price"

            TextInput:
                id: comment
                pos: root.center_x - 220, 100
                size: 400,50
                hint_text: "Comment"
            GridLayout:
                cols: 2
                size_hint: 0.2, 0.2
                padding: 10, 10
                spacing: 10, 0
                Button:
                    text: 'Submit'
                    on_press: root.submit_input(type.text,price.text,comment.text)
                Button:
                    text: 'Back'
                    on_press: root.manager.current = 'screen_home'

