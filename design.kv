<LoginScreen>:
    padding: 100,100,100,100
    spacing: 100
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: "30sp"
            RelativeLayout:
                TextInput:
                    id: username
                    hint_text: "Username"
                    size_hint: 0.5, 0.7
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            RelativeLayout:
                TextInput:
                    id: password
                    hint_text: "Password"
                    password:True
                    size_hint: 0.5, 0.7
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.5, 1
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            Label:
                id: login_wrong
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 0, 0, 1
                opacity: 1 if self.state == 'normal' else 0.5
                # color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Create your account"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
            password:True
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Login Page"
            on_press: root.manager.current = "login_screen"

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    HomeScreen:
        name: 'screen_home'
    AddScreen:
        name: 'screen_add'
    SpentScreen:
        name: 'screen_spent'
    ReceivedScreen:
        name: 'screen_received'