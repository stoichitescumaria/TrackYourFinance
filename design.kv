<AddScreen>:
    padding: 100,100,100,100
    spacing: 50
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 5, 5
            spacing: 5, 5
            RelativeLayout:
                TextInput:
                    id: type
                    size_hint: 0.5, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                    hint_text: "Type"

            RelativeLayout:
                TextInput:
                    id: price
                    size_hint: 0.5, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                    hint_text: "Price"

            RelativeLayout:
                TextInput:
                    id: comment
                    size_hint: 0.5, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                    hint_text: "Comment"
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            allow_strech: True
            
            Button:
                text: 'Submit'
                on_press: root.submit_input(type.text,price.text,comment.text)
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: 'Back'
                on_press: root.manager.current = 'screen_home'
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<HomeScreen>:
    GridLayout:
        cols: 1
        rows: 2
        ActionBar:
            top: 0
            ActionView:
                ActionPrevious:
                    text: 'logout'
                    on_press: root.manager.current = 'login_screen'
                ActionButton:
                    text: 'Home'
                    on_press: root.manager.current = 'screen_home'

                ActionButton:
                    text: 'Add New'
                    on_press: root.manager.current = 'screen_add'
                ActionButton:
                    text: 'Received'
                    on_press: root.manager.current = 'screen_received'
                ActionButton:
                    text: 'Spent'
                    on_press: root.manager.current = 'screen_spent'
        BoxLayout:
            orientation: "vertical"
            MyRecycleView:
                id:my_recycleview

